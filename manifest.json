{
  "description": "Add a counter to the chat GPT chat window",
  "manifest_version": 2,
  "name": "chatgpt-counter",
  "version": "1.0",
  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_action": {
    "default_icon": "icons/counter.png",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.chat.openai.com/*"
      ],
      "js": [
        "gptcounter.js"
      ]
    }
  ]
}
